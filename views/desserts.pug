extends layout

block content
   h1= title
   #nav
      ul
         li
            a(href='/') Home
         li
            a(href='/burgers') Burgers
         li
            a(href='/sides') Sides
         li
            a(href='/desserts') Desserts
         li
            a(href='/directions') Directions
   #foodPic
      img#food(src='https://www.myjewishlearning.com/wp-content/uploads/2009/12/coffeecake.jpg')
      p Here's our delicious #{name}!
   #menu
      each val in items
         .menuItem
            img.dessertMenu(src=val.img)
            h3= val.title
            p= val.descr     
