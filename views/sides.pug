extends layout

block content
   h1= title
   #nav
      ul
         li
            a(href='/') Home
         li
            a(href='/burgers') Burgers
         li
            a(href='/sides') Sides
         li
            a(href='/desserts') Desserts
         li
            a(href='/directions') Directions
   #foodPic
      img#food(src='https://d1f28u9l1tudce.cloudfront.net/menu/marquee/menu-category-sides.jpg')
      p Look at our sweet #{name}!
   #menu
      each val in items
         .menuItem
            img.sideMenu(src=val.img)
            h3= val.title
            p= val.descr     
